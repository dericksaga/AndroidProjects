<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:id="@+id/fragPlayer"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/foto_widthMin"
        android:layout_height="@dimen/foto_heightMin"
        android:layout_gravity="center_horizontal"
        android:id="@+id/playerphoto"/>
    <LinearLayout
        android:layout_width="@dimen/layout_width4p"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playername"
            android:text="Player_Name"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_pName_size4p"/>

        <TextView
            android:layout_width="@dimen/layout_width4p"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_lPoint_size4p"
            android:layout_gravity="center_horizontal"
            android:id="@+id/lifepoints"
            android:textAlignment="center"/>
        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:id="@+id/surrender"
            android:src="@drawable/surrendericon" />
    </LinearLayout>
</LinearLayout>