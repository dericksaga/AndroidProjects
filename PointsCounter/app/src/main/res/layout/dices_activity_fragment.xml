<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageDiceAnimation"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="@dimen/result_width"
        android:layout_height="@dimen/result_height"
        android:paddingBottom="@dimen/result_padding"
        android:id="@+id/diceValue"
        android:text="1"
        android:textSize="@dimen/result_textSize"
        android:layout_gravity = "center"
        android:textAlignment="center"/>
</FrameLayout>