<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="android.dominando.pointscounter.MatchActivityModular">
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragP1" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragP2"
        android:layout_marginTop="@dimen/gap_between_frags"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragP3"
        android:layout_marginTop="@dimen/gap_between_frags"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragP4"
        android:layout_marginTop="@dimen/gap_between_frags"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:id="@+id/diceBtnMin"
                android:src="@drawable/diceicon"
                android:layout_gravity="center"
                android:onClick="diceIconClick"/>
            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:id="@+id/coinBtnMin"
                android:src="@drawable/coinicon"
                android:layout_gravity="center"
                android:onClick="coinIconClick"/>
            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:id="@+id/dice20BtnMin"
                android:src="@drawable/dice20faces"
                android:layout_gravity="center"
                android:onClick="dice20IconClick"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
